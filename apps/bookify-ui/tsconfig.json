{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"strictNullChecks": true,
		"checkJs": false,
		"noImplicitAny": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"types": [
			"chrome-types",
			"firefox-webext-browser"
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}