{
	"name": "bookify-ui",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"dev:extension": "npm-watch",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"build:extension": "next build && npx turbo lint:build",
		"lint:build": "mv out/_next out/assets || true && gsed -i 's/\\/_next/\\/assets/g' out/**.html",
		"package": "npx turbo build:extension && zip -r packages/$(date -u +\"%Y-%m-%dT%H:%M:%SZ\").zip out"
	},
	"watch": {
		"build:extension": {
			"patterns": [
				"src",
				"src/pages",
				"test",
				"public"
			],
			"extensions": "js,jsx,tsx,ts,css,scss,less,styl,html,json,*",
			"runOnChangeOnly": true
		}
	},
	"dependencies": {
		"@types/firefox-webext-browser": "^120.0.4",
		"chrome-types": "^0.1.345",
		"next": "15.2.1",
		"npm-watch": "^0.13.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"packageManager": "npm@9.6.7",
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.2.1",
		"tailwindcss": "^4",
		"turbo": "^2.1.3",
		"typescript": "^5"
	},
	"eslintConfig": {
		"extends": "@repo/eslint-config/next.js"
	}
}